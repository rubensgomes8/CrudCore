@model crudmysql.Models.Funcionalidade

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Editar Funcionalidade</title>
</head>
<body>

    <h4>Editar Funcionalidade</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdFuncionalidade" />
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Descricao" class="control-label"></label>
                    <input asp-for="Descricao" class="form-control" />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Perfil" class="control-label"></label>
                    @Html.DropDownListFor(p => p.IdPerfil, new SelectList(ViewBag.Perfis, "IdPerfil", "Nome"), "Selecione o perfil", new { @class = "form-control" })
                    <span asp-validation-for="Perfil" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Voltar para Lista</a>
    </div>

</body>
</html>
