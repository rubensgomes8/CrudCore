@model crudmysql.Models.Usuario

@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cadastrar Usuario</title>
</head>
<body>

    <h4>Cadastrar Usuario</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Idade" class="control-label"></label>
                    <input asp-for="Idade" class="form-control" />
                    <span asp-validation-for="Idade" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdPerfil" class="control-label"></label>
                    @Html.DropDownListFor(p => p.IdPerfil, new SelectList(ViewBag.Perfis, "IdPerfil", "Nome"), "Selecione o perfil", new { @class = "form-control" })
                    <span asp-validation-for="IdPerfil" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Voltar para Lista</a>
    </div>

</body>
</html>
@section Scripts {
    @{Html.RenderPartial("_ValidationScriptsPartial");}
}