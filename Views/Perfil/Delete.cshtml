@model crudmysql.Models.Perfil


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Excluir</title>
</head>
<body>

    <h3>Deseja mesmo excluir esse registro?</h3>
    <div>
        <h4>Perfil</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Descricao)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Descricao)
            </dd>
        </dl>
        @if (Model.Funcionalidades.Count > 0)
        {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Nome Funcionalidade</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Funcionalidades)
                    {
                        <tr>
                            <td>@item.Nome</td>
                        </tr>
                    }
                </tbody>
            </table>
        }

        <form asp-action="Delete">
            <input type="hidden" asp-for="IdPerfil" />
            <input type="submit" value="Excluir" class="btn btn-default" /> |
            <a asp-action="Index">Voltar para Lista</a>
        </form>
    </div>
</body>
</html>
